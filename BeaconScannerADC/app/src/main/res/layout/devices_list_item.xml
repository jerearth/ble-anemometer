<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#1F1F1F"
        android:padding="16dp"
        android:layout_marginBottom="6dp">

        <!-- Horný text s bajtovým záznamom -->
        <TextView
            android:id="@+id/listDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="[B@4a57c3f8"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Sekcia UUID a rýchlosť vetra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Text UUID -->
            <TextView
                android:id="@+id/listUUID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UUID"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <!-- Rýchlosť vetra s ikonou -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 km/s"
                    android:textColor="#A0A0A0"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/wind"
                    app:tint="#A0A0A0" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sekcia MAC adresa a smer vetra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Text MAC adresa -->
            <TextView
                android:id="@+id/listMac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mac address"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <!-- Smer vetra s ikonou -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S V"
                    android:textColor="#A0A0A0"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/compass"
                    app:tint="#A0A0A0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
